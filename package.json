{
    "name": "workspaces-run-script",
    "version": "0.0.3",
    "description": "Run a script on the packages in a mono-repo.",
    "homepage": "https://github.com/ncochard/workspaces-run-script#readme",
    "bugs": {
        "url": "https://github.com/ncochard/workspaces-run-script/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ncochard/workspaces-run-script.git"
    },
    "license": "MIT",
    "main": "dist/index.js",
    "bin": "./bin/workspaces-run-script.js",
    "scripts": {
        "clean": "npx rimraf dist .cache",
        "purge": "npx rimraf dist .cache node_modules",
        "build": "npm-run-all --parallel --print-label --print-name tsc",
        "all": "npm-run-all --parallel --print-label --print-name lint tsc test",
        "lint": "eslint ./src/ --ext ts,json --quiet --fix",
        "tsc": "tsc",
        "test": "jest"
    },
    "dependencies": {
        "commander": "^9.4.1",
        "cross-spawn": "^7.0.3",
        "glob": "^8.0.3",
        "split": "^1.0.1"
    },
    "devDependencies": {
        "@types/cross-spawn": "^6.0.2",
        "@types/glob": "^8.0.0",
        "@types/jest": "^29.2.4",
        "@types/node": "^18.11.11",
        "@types/prettier": "^2.7.2",
        "@types/split": "^1.0.2",
        "@typescript-eslint/eslint-plugin": "^5.47.0",
        "@typescript-eslint/parser": "^5.47.0",
        "eslint": "^8.30.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.3.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.8.1",
        "ts-jest": "^29.0.3",
        "typescript": "^4.9.4"
    }
}
